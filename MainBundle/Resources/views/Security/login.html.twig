{% extends "@Main/base.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="container">
        <div class="offset-4" id="login">

    <div class="row">
        <div class="col-sm-6">
            <div class="account-wall">
                <img class="profile-img" src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120"
                     alt="">
                <form class="form-signin" action="{{ path("fos_user_security_check") }}" method="post">
                    {% if csrf_token %}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                    {% endif %}
                    <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="Username"/>

                    <input class="form-control" type="password" id="password" name="_password" required="required" placeholder="Password"/>

                    <input class="form-control btn btn-primary" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />

                </form>
            </div>
            <a href="{{ path('fos_user_registration_register') }}" class="text-center new-account">Create an account </a>
        </div>
    </div>
        </div>
    </div>
{% endblock fos_user_content %}
