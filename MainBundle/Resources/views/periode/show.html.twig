{% extends '@Main/base.html.twig' %}

{% block body %}
    <h1>Periode</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ periode.id }}</td>
            </tr>
            <tr>
                <th>Checkin</th>
                <td>{% if periode.checkin %}{{ periode.checkin|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Checkout</th>
                <td>{% if periode.checkout %}{{ periode.checkout|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('periode_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('periode_edit', { 'id': periode.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
