{% extends '@Main/base.html.twig' %}

{% block body %}
    <h1>Date</h1>

    <table class="t">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ date.id }}</td>
            </tr>
            <tr>
                <th>Checkin</th>
                <td>{% if date.checkin %}{{ date.checkin|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Checkout</th>
                <td>{% if date.checkout %}{{ date.checkout|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('date_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('date_edit', { 'id': date.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
