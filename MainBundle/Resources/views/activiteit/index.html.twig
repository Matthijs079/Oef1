{% extends '@Main/base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/main/css/style.css') }}">
{% endblock %}

{% block body %}

    <div class="container">

            <a href="{{ path('activiteit_new') }}" class="btn btn-success pull-right"> + Activiteit</a>
        <h1>Activiteiten in de omgeving</h1>
        <div class="row">
            {% for activiteit in activiteits %}

                <div class="col-xs-18 col-sm-6 col-md-4">
                    <div class="thumbnail" id="news">
                        <div class="caption">
                            <h3>{{ activiteit.naam }}</h3>
                            <p>{{ activiteit.beschrijving }}</p>

                            <a href="{{ path('activiteit_show', { 'id': activiteit.id }) }}" class="btn btn-info btn-sm">Meer lezen</a>
                            {% if is_granted('ROLE_ADMIN') %}
                                <a href="{{ path('activiteit_edit', { 'id': activiteit.id }) }}" class="btn btn-primary btn-xs">Aanpassen</a>
                            {% endif %}

                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
